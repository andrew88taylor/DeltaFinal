<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Delta.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Delta"
    TabBarBackgroundColor="LightGray">

    <TabBar>
        <ShellContent
            Title="Profile"
            ContentTemplate="{DataTemplate local:Profile}"
            Route="Profile" />

        <ShellContent
            Title="Workout"
            ContentTemplate="{DataTemplate local:Dashboard}"
            Route="Dashboard" />

        <ShellContent
            Title="History"
            
            ContentTemplate="{DataTemplate local:History}"
            Route="History" />
    </TabBar>
</Shell>

