<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Delta.ExerciseInputModalPage"
             Shell.BackgroundColor="#0055A4" 
     BackgroundColor="LightGray">
    <!-- Light Gray for Page Background -->

    <StackLayout Padding="20">


            <Entry x:Name="TypeEntry" 
               FontAttributes="Bold"
               Placeholder="Enter Exercise Name..."
               BackgroundColor="#F0F0F0" 
                TextColor="Black"
               Margin="5" />

                <StackLayout x:Name="CustomFieldsContainer" BackgroundColor="LightGray">
                    <!-- Custom fields container -->
                </StackLayout>

        <Button Text="Add Exercise Info" Clicked="OnAddFieldClicked" 
                BackgroundColor="#0055A4" 
                    TextColor="White"
                Margin="5,5,5,10" />


        <Button Text="Save Exercise" Clicked="OnSaveClicked" 
                BackgroundColor="#0055A4" 
                            TextColor="White"
                Margin="5,10,5,5" />

                            <Button Text="Back" Clicked="OnBackClicked" 
                BackgroundColor="#0055A4" 
                                TextColor="White"
                Margin="5" />

    </StackLayout>
</ContentPage>
